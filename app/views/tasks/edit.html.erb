<div class="flex flex-col items-center">
  <h1>edit task</h1>
  <%= form_with model: @task, url: task_path, method: :patch do |f| %>
    <div>
      <%= f.label :title, "title" %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :content, "content" %>
      <%= f.text_field :content %>
    </div>
    <%= f.submit "Submit" %>
  <% end %>
</div>
