<div class="flex flex-col items-center">
  <div class="mb-3 xl:w-96">
    <% if category.errors.full_messages.any? %>
      <div class="text-red-500">
        <ul>
          <% category.errors.full_messages.each do |error_message| %>
            <li>
              <%= error_message %> <br />
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model:category, class:"flex flex-col items-center"  do |f| %>
      <div class="mb-5">
        <%= f.label :title, "title", class: "form-label inline-block mb-2 text-gray-700" %>
        <%= f.text_field :title, class: "form-control block w-full px-3 py-1.5 text-gray-700 bg-white border border-solid border-gray-300 rounded focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %>
      </div>
      <div>
        <%= f.submit class:"px-2 py-1 bg-blue-200 rounded-md  hover:bg-blue-600 hover:text-white"   %>
      </div>
    <% end %>
  </div>
</div>
